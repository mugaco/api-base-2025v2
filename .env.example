# =================================
# CONFIGURACIÓN BASE API 2025
# =================================
# Copia este archivo como .env y configura los valores según tu entorno

# =================================
# APLICACIÓN
# =================================
NODE_ENV=development
PORT=3000
USE_HTTPS=false

# =================================
# BASE DE DATOS - MONGODB
# =================================
MONGO_URI=mongodb://localhost:27017/cms-2025
# Para MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@your-cluster.mongodb.net/api-cms-2025?retryWrites=true&w=majority

# =================================
# AUTENTICACIÓN JWT
# =================================
JWT_SECRET=tu_jwt_secret_super_seguro_cambialo
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=tu_jwt_refresh_secret_super_seguro_cambialo
JWT_REFRESH_EXPIRES_IN=30d

# =================================
# ALMACENAMIENTO - STORAGE
# =================================
# Tipo de proveedor: minio | local
STORAGE_PROVIDER=minio

# MinIO Configuration
MINIO_ENDPOINT=play.min.io
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=mediafiles

# Local Storage (si STORAGE_PROVIDER=local)
STORAGE_LOCAL_PATH=./uploads
STORAGE_PUBLIC_URL=http://localhost:3000/uploads

# =================================
# TRADUCCIONES
# =================================
DEFAULT_LANGUAGE=es
FALLBACK_LANGUAGE=en

# =================================
# API KEYS PÚBLICAS
# =================================
# Claves para acceso a APIs públicas del CMS (separadas por comas)
CMS_PUBLIC_API_KEYS=frontend-web-key,mobile-app-key,partner-site-key

# =================================
# EMAIL SERVICE
# =================================
# Tipo de transporte: mailgun | logger
EMAIL_TRANSPORT=logger

# Para el transporte Logger:
EMAIL_LOG_TO_CONSOLE=true
EMAIL_LOG_TO_FILE=false
EMAIL_LOG_FILE_PATH=./logs/emails.log

# Para el transporte Mailgun:
MAILGUN_API_KEY=tu_mailgun_api_key
MAILGUN_DOMAIN=tu_dominio.com
MAILGUN_HOST=api.mailgun.net
EMAIL_FROM=noreply@tu_dominio.com

# =================================
# WEBHOOKS
# =================================
# Configuración para webhooks salientes
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3

# =================================
# LOGGING
# =================================
# Nivel de logging: error | warn | info | debug
LOG_LEVEL=info

# =================================
# DESARROLLO
# =================================
# Variables específicas para desarrollo
DEBUG=true

# =================================
# CORS
# =================================
# Origenes permitidos para CORS (separados por comas)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =================================
# RATE LIMITING
# =================================
# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# SEGURIDAD
# =================================
# Configuraciones de seguridad adicionales
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=tu_session_secret_super_seguro_cambialo

# =================================
# DOCKER / TRAEFIK (Solo para desarrollo con Docker)
# =================================
TRAEFIK_HOST=dev-api-base-2025.localhost

# =================================
# API METADATA
# =================================
API_PREFIX=/api
API_TITLE=API Base 2025
API_DESCRIPTION=API para la gestión de contenidos y recursos
API_VERSION=1.0.0 