{
  "name": "api-base-2025",
  "version": "1.0.0",
  "description": "API REST plataforma base 2025",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:dev": "docker compose up",
    "docker:dev:build": "docker compose up --build",
    "docker:dev:down": "docker compose down",
    "docker:dev:logs": "docker compose logs -f",
    "cli": "ts-node src/cli/index.ts",
    "cli:docker": "docker exec -it dev-api-cms npm run cli",
    "create-admin": "ts-node src/cli/index.ts user --action create",
    "create-admin:docker": "docker exec -it dev-api-cms ts-node src/cli/index.ts user --action create"
  },
  "keywords": [
    "cms",
    "api",
    "rest",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/commander": "^2.12.0",
    "awilix": "^12.0.5",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "eta": "^3.5.0",
    "express": "^5.1.0",
    "form-data": "^4.0.2",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "html-to-text": "^9.0.5",
    "i18next": "^25.0.0",
    "i18next-fs-backend": "^2.6.0",
    "inquirer": "^8.2.6",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^12.0.1",
    "minio": "^8.0.5",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "nanospinner": "^1.2.2",
    "nodemailer-mailgun-transport": "^2.1.5",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.34.1",
    "slugify": "^1.6.6",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/handlebars": "^4.1.0",
    "@types/html-to-text": "^9.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/minio": "^7.1.1",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/ms": "^2.1.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.0",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemailer-mailgun-transport": "^1.4.6",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.24.0",
